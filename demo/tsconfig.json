{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "build",
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "jsx": "preserve",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "src/assets/js/*"
      ],
      "@img/*": [
        "src/assets/img/*"
      ],
      "@api/*": [
        "src/api/*"
      ],
      "@store/*": [
        "src/store/*"
      ],
      "@router/*": [
        "src/router/*"
      ],
      "@com/*": [
        "src/components/*"
      ],
      "@extend/*": [
        "src/extend/*"
      ],
      "@view/*": [
        "src/views/*"
      ]
    },
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": false,
    "sourceMap": true,
    "target": "esnext",
    "types": [
      "webpack-env"
    ],
    "useDefineForClassFields": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "node_modules",
    "./dist/**/*",
    "build"
  ]
}