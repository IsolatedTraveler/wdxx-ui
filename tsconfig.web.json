{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "composite": true,
    "jsx": "preserve",
    "lib": ["ES2018", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true,
    "paths": {
      "@ui/*": ["packages/*"]
    }
  },
  "include": ["packages", "typings/components.d.ts", "typings/env.d.ts"],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**/*",
    "**/gulpfile.ts",
    "**/test-helper",
    "packages/test-utils",
    "**/*.md"
  ]
}