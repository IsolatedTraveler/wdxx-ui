{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "target": "es2016",
    "module": "ESNext",
    "moduleResolution": "Node",
    "include": [
      "packages/*.ts", "packages/*.tsx", "packages/*.vue"
      ,"examples/*.ts", "examples/*.tsx", "examples/*.vue"
    ]
  }
}
